<p id="notice"><%= notice %></p>

<h1>Listing Cake Days</h1>

<table>
  <thead>
    <tr>
      <th>Baker</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cake_days.each do |cake_day| %>
      <tr>
        <td><%= cake_day.baker %></td>
        <td><%= cake_day.date %></td>
        <td><%= link_to 'Show', cake_day %></td>
        <td><%= link_to 'Edit', edit_cake_day_path(cake_day) %></td>
        <td><%= link_to 'Destroy', cake_day, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cake day', new_cake_day_path %>
